%head
  = tag :meta, :charset => 'utf-8'
  = tag :meta, 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'

  %title= yield :title

  = tag :meta, :name => 'author', :content => 'CoreBit Soluções Web Ltda'
  = tag :meta, :name => 'title', :content => configatron.app_name

  - if action_name == 'home'
    = tag :meta, :name => 'description', :content => 'Mídia Indoor Digital Signage'
  = tag :meta, :name => 'keywords', :content => ''

  /[if lt IE 9]
    = javascript_include_tag 'http://html5shim.googlecode.com/svn/trunk/html5.js'

  = tag :meta, :name => 'viewport', :content => 'width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0'
  = tag :meta, :name => 'apple-mobile-web-app-capable', :content => 'yes'

  = favicon_link_tag '/assets/favicon.ico', :rel => 'shortcut icon'

  = csrf_meta_tag

  / CSS
  = stylesheet_link_tag :print, :media => :all
  = yield :css

%body

  / .two-columns
  /   .logo Big Evento
  / .two-columns
  /   %center
  /     / =  @usuario.nome
  /     .content-barcode
  /       .barcode= @intencao_assinatura.barcode_data(height:60).html_safe
  /       .code{:style => 'margin: -10px 0 0 0; '}= @intencao_assinatura.barcode
  / Uma empresa do Grupo Mídia Indoor
  / %hr
  .four-columns= yield

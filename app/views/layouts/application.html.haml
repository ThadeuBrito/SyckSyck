%head
  = tag :meta, :charset => 'utf-8'
  = tag :meta, 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'

  %title== #{configatron.app_name} - #{yield(:title)}

  = tag :meta, :name => 'author', :content => 'CoreBit Soluções Web Ltda'
  = tag :meta, :name => 'title', :content => configatron.app_name

  - if action_name == 'home'
    = tag :meta, :name => 'description', :content => ''

  /[if lt IE 9]
    = javascript_include_tag 'http://html5shim.googlecode.com/svn/trunk/html5.js'

  = tag :meta, :name => 'viewport', :content => 'width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0'
  = tag :meta, :name => 'apple-mobile-web-app-capable', :content => 'yes'

  / Favicons
  /==================================================
  = tag :link, :rel => 'shortcut icon', :href => '/assets/favicon.ico'
  = tag :link, :rel => 'apple-touch-icon', :href => '/assets/apple-touch-icon.png'
  = tag :link, :rel => 'apple-touch-icon', :href => '/assets/apple-touch-icon-72x72.png', :sizes => '72x72'
  = tag :link, :rel => 'apple-touch-icon', :href => '/assets/apple-touch-icon-114x114.png', :sizes => '114x114'

  / CSS
  = stylesheet_link_tag :application
  = yield :css

  = javascript_include_tag 'vendor/custom.modernizr'
  = csrf_meta_tags

  = content_for :modal do
    = render 'shared/login'

  = content_for :modal do
    = render 'shared/cadastro'

%body
  #content-wrapper
    / %header.contain-to-grid
    /   %nav.top-bar
    /     %ul.title-area
    /       %li.name
    /         %h1{:style => 'margin-top: 10px'}
    /           = link_to ' SyckSyck', root_path, :class => 'icon-desktop'
    /     %section.top-bar-section
    /       %ul.right
    /         %li= link_to 'Login', '#', 'data-reveal-id' => 'login-modal'
    /         %li= link_to 'Cadastrar','#', 'data-reveal-id' => 'cadastro-modal'

    %article
      .row
        .large-12.columns
          = render 'shared/flash_messages'
          - unless action_name == 'home'
            %br/
            %center
              %h2.subheader= link_to 'Home', root_url
          = yield

  = yield :modal

  / JS
  = javascript_include_tag :application
  = yield :js

</html>

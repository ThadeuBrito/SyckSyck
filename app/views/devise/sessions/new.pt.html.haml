- title('Login', false)

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .row
    .large-6.columns.large-centered
      %fieldset
        %h5 Login de usuário

        = f.input :email, :placeholder => 'E-mail cadastrado', :title => 'Usuário', :autofocus => true, :hint => ''
        = f.label :password
        .row.collapse
          .large-8.columns
            = f.input :password, :label => false, :placeholder => 'Senha', :title => 'Senha'
          .large-4.columns
            = f.submit 'Entrar', 'data-disable-with' => 'Enviando...', :class => 'button postfix radius'
        = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

        = render 'devise/shared/links'
